package org.springframework.boot.autoconfigure.data.rest;

import org.springframework.boot.autoconfigure.condition.ConditionalOnClass;
import org.springframework.boot.autoconfigure.condition.ConditionalOnMissingBean;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.validation.beanvalidation.LocalValidatorFactoryBean;

@Configuration
public class RepositoryEventBeanValidatingBeanConfiguration {

    @Bean
    @ConditionalOnClass(LocalValidatorFactoryBean.class)
    @ConditionalOnMissingBean(LocalValidatorFactoryBean.class)
    LocalValidatorFactoryBean localValidatorFactoryBean() {
        return new LocalValidatorFactoryBean();
    }

    @Bean
    RepositoryEventBeanValidatingConfigurer repositoryEventBeanValidationConfiguration(
            LocalValidatorFactoryBean localValidatorFactoryBean) {
        return new RepositoryEventBeanValidatingConfigurer(localValidatorFactoryBean);
    }
}
